  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-compiler-plugin</artifactId>
          <configuration>
            <source>1.5</source>
            <target>1.5</target>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>maven-site-plugin</artifactId>
          <version>2.1.1</version>
        </plugin>
          <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <!-- This version fixes problems with files being added more than one in the archive -->
            <version>2.2</version>
          </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-surefire-plugin</artifactId>
          <version>2.5</version>
          <configuration>
            <forkMode>always</forkMode>
            <argLine>-Xmx256m ${argLine}</argLine>
            <systemPropertyVariables>
              <lily.test.hbase>${lily.test.hbase}</lily.test.hbase>
              <lily.test.log>${lily.test.log}</lily.test.log>
            </systemPropertyVariables>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.apache.avro</groupId>
          <artifactId>avro-maven-plugin</artifactId>
          <version>1.4.0-20101005</version>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

  <profiles>
    <profile>
      <id>org.lilycms.default</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <!-- This is to make sure the ${argLine} in the configuration of the surefire plugin will get substituted.
             Otherwise the tests fail with a "java.lang.NoClassDefFoundError: null". -->
        <argLine />
      </properties>
    </profile>
    <profile>
      <id>fast</id>
      <properties>
        <maven.test.skip>true</maven.test.skip>
        <argLine />
      </properties>
    </profile>
    <profile>
      <id>connect</id>
      <properties>
        <lily.test.hbase>connect</lily.test.hbase>
        <argLine />
      </properties>
    </profile>
    <profile>
      <id>log</id>
      <properties>
        <lily.test.log>true</lily.test.log>
        <argLine />
      </properties>
    </profile>
  </profiles>

  <reporting>
