<?xml version="1.0"?>
<beans              xmlns = "http://www.springframework.org/schema/beans"
                xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
              xmlns:kauri = "http://kauriproject.org/runtime/1.0#springext"
            xmlns:context = "http://www.springframework.org/schema/context"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
                             http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                             http://www.springframework.org/schema/context
                             http://www.springframework.org/schema/context/spring-context-2.5.xsd
                             http://kauriproject.org/runtime/1.0#springext
                             http://www.kauriproject.org/schemas/runtime/springext.xsd">

  <context:annotation-config/>

  <kauri:import-service
      id="hadoopConfFactory"
      service="org.lilycms.server.modules.general.HadoopConfigurationFactory"/>

  <kauri:import-service
      id="repository"
      service="org.lilycms.repository.api.Repository"/>

  <kauri:import-service
      id="messageQueue"
      service="org.lilycms.rowlog.api.RowLog"/>

  <kauri:import-service
      id="writeAheadLog"
      service="org.lilycms.rowlog.api.RowLog"/>

  <kauri:import-service
      id="zooKeeper"
      service="org.lilycms.util.zookeeper.ZooKeeperItf"/>

  <bean id="hbaseConf"
      factory-bean="hadoopConfFactory"
      factory-method="getHBaseConf"/>

  <bean id="indexerModel" class="org.lilycms.indexer.model.impl.IndexerModelImpl">
    <constructor-arg ref="zooKeeper"/>
  </bean>

  <bean id="indexerMaster" class="org.lilycms.indexer.master.IndexerMaster">
    <constructor-arg ref="zooKeeper"/>
    <constructor-arg ref="indexerModel"/>
    <constructor-arg><bean factory-bean="hadoopConfFactory" factory-method="getMapReduceConf"/></constructor-arg>
    <constructor-arg><bean factory-bean="hadoopConfFactory" factory-method="getMapReduceJobConf"/></constructor-arg>
    <constructor-arg ref="hbaseConf"/>
    <constructor-arg><bean factory-bean="hadoopConfFactory" factory-method="getZooKeeperConnectString"/></constructor-arg>
    <constructor-arg><bean factory-bean="hadoopConfFactory" factory-method="getZooKeeperSessionTimeout"/></constructor-arg>
  </bean>

  <bean id="linkIndexSetup" class="org.lilycms.server.modules.indexer.LinkIndexSetup">
    <constructor-arg ref="repository"/>
    <constructor-arg ref="writeAheadLog"/>
    <constructor-arg ref="hbaseConf"/>
  </bean>

  <bean id="linkIndex"
      factory-bean="linkIndexSetup"
      factory-method="getLinkIndex"/>

  <bean id="indexerWorker" class="org.lilycms.indexer.worker.IndexerWorker">
    <constructor-arg ref="indexerModel"/>
    <constructor-arg ref="repository"/>
    <constructor-arg ref="messageQueue"/>
    <constructor-arg ref="linkIndex"/>
  </bean>

</beans>
