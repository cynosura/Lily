<?xml version="1.0"?>
<beans              xmlns = "http://www.springframework.org/schema/beans"
                xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
              xmlns:kauri = "http://kauriproject.org/runtime/1.0#springext"
            xmlns:context = "http://www.springframework.org/schema/context"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
                             http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                             http://www.springframework.org/schema/context
                             http://www.springframework.org/schema/context/spring-context-2.5.xsd
                             http://kauriproject.org/runtime/1.0#springext
                             http://www.kauriproject.org/schemas/runtime/springext.xsd">

  <context:annotation-config/>

  <kauri:module restletContext="restletContext" classLoader="moduleClassLoader" handle="module" conf="confRegistry"/>

  <bean class="org.kauriproject.runtime.rapi.ConfPlaceholderConfigurer">
    <constructor-arg ref="confRegistry"/>
  </bean>

  <kauri:import-service
      id="hadoopConfFactory"
      service="org.lilycms.server.modules.general.HadoopConfigurationFactory"/>

  <kauri:export-service
      ref="repository"
      service="org.lilycms.repository.api.Repository"/>

  <kauri:export-service
      ref="messageQueue"
      service="org.lilycms.rowlog.api.RowLog"/>

  <kauri:export-service
      ref="writeAheadLog"
      service="org.lilycms.rowlog.api.RowLog"/>

  <bean id="hbaseConf"
      factory-bean="hadoopConfFactory"
      factory-method="getHBaseConf"/>

  <bean id="idGenerator" class="org.lilycms.repository.impl.IdGeneratorImpl"/>

  <bean id="typeManager" class="org.lilycms.repository.impl.HBaseTypeManager">
    <constructor-arg ref="idGenerator"/>
    <constructor-arg ref="hbaseConf"/>
  </bean>

  <bean
    id="blobStoreAccessFactory"
    class="org.lilycms.server.modules.repository.BlobStoreConfig"
    factory-method="get">
    <constructor-arg>
      <bean class="java.net.URI">
        <constructor-arg value="${repository:blobFileSystem}"/>
      </bean>
    </constructor-arg>
    <constructor-arg ref="hbaseConf"/>
  </bean>

  <bean id="repository" class="org.lilycms.repository.impl.HBaseRepository">
    <constructor-arg ref="typeManager"/>
    <constructor-arg ref="idGenerator"/>
    <constructor-arg ref="blobStoreAccessFactory"/>
    <constructor-arg ref="hbaseConf"/>
  </bean>

  <bean id="messageQueue" factory-bean="repository" factory-method="getMessageQueue"/>

  <bean id="writeAheadLog" factory-bean="repository" factory-method="getWal"/>

  <bean id="address" class="org.lilycms.server.modules.repository.AddressResolver">
    <constructor-arg value="${repository:interface}"/>
    <constructor-arg value="${repository:nameserver}"/>
  </bean>

  <bean id="avroServer" class="org.lilycms.server.modules.repository.AvroServer">
    <constructor-arg>
      <bean factory-bean="address" factory-method="getHostAddress"/>
    </constructor-arg>
    <constructor-arg ref="repository"/>
    <constructor-arg value="${repository:port}"/>
  </bean>

  <bean class="org.lilycms.server.modules.repository.ZKPublisher">
    <constructor-arg value="${repository:zookeeperConnectString}"/>
    <constructor-arg>
      <bean factory-bean="address" factory-method="getHostAddress"/>
    </constructor-arg>
    <constructor-arg>
      <bean factory-bean="avroServer" factory-method="getPort"/>
    </constructor-arg>
    <constructor-arg value="${repository:blobFileSystem}"/>
    <constructor-arg ref="hbaseConf"/>
  </bean>

</beans>
